{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "Server": {
    "Database": {
      "Provider": "Sqlite",
      "ConnectionString": "Data Source=mudDatabase.db",
      "DefaultMudAdminEmail": "admin@mud.de",
      "DefaultMudAdminPassword": "admin"
    },
    "Spa": {
      "IntegratedHosting": true,
      "RelativePath": "client"
    },
    "TokenSecret": "My Awesome Secret, please change in production!",
    "MudAutoRestart" : true
  }
}
