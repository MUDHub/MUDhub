{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "Server": {
    "Database": {
      "Provider": "Sqlite",
      "ConnectionString": "Data Source=mudDatabase.db",
      "DefaultMudAdminEmail": "admin@mudhub.de",
      "DefaultMudAdminPassword": "admin"
    },
    "Spa": {
      "IntegratedHosting": true,
      "RelativePath": "client",
      "ExternalHostingUrl": "http://localhost:4200"
    },
    "Mail": {
      "Sender": "MUDhub Service",
      "SubjectReset": "Password Zurücksetzten",
      "MessageReset": "Hier gehts zum reset link {0}",
      "Mail": "master@mudhub.de",
      "servername": "smtp.strato.de",
      "Port": 587
    },
    "TokenSecret": "My Awesome Secret, please change in production!",
    "MudAutoRestart": true
  }
}
